{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "esModuleInterop": true,
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "moduleResolution": "node",
        "types": [
            "vite/client"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/Routes.tsx",
        "cypress/**/*.ts"
    ]
}